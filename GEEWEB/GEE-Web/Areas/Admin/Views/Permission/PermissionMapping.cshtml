
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid border ">
        <div class="row">

            <div id="toastmsg"><p class="yellow">Fill all mandatory feilds (*)..</p></div>

            <div class="col-md-12 border-left p-3 bg-light">
                <h5 class="pb-2 text-center text-uppercase font-weight-bold"> Assign Permission </h5>

                <div class="mb-3">
                    <div class="mb-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="#">@Resource.Enquiry1002lblLibrary</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@Resource.Enquiry1002lblData</li>
                            </ol>
                        </nav>
                    </div>


                    <div class="row bg-white mx-auto py-2 mb-2">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-3 col-sm-12 col-xs-12">
                                    <div class="form-group form-group-sm">
                                        <label class="control-label " for="select">
                                            Select Role
                                        </label>
                                        <select class="select form-control form-control-sm" id="ddlUserGroup" name="" onchange="GetModule(this)">
                                            <option>Select</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <h5 class="master-table-title"><i class="fa fa-filter" aria-hidden="true"></i> Modules having no permission</h5>
                                    <ul class="list-group assign-permission-list" id="ulUnmappedModule">
                                       
                                    </ul>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <h5 class="master-table-title"><i class="fa fa-filter" aria-hidden="true"></i> Modules with permission</h5>
                                    <ul class="list-group assign-permission-list" id="ulmappedModule">
                                       
                                    </ul>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="text-right"></div>
                                    <div class="form-group  float-right mt-2">
                                        <button class="mybtndark" id="submit" type="button"><i class="far fa-save mr-2" aria-hidden="true"></i>Save</button>
                                    </div>
                                </div>
                            </div>

                            <h5 class="master-table-title"><i class="fa fa-table" aria-hidden="true"></i> Sub modules permission</h5>
                            <div class="table-responsive sub-module-table">
                                <table class="table table-striped table-bordered table-sm table-hover" style="width:100%" id="tblPermission">
                                   
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}

    <script src="~/Scripts/DevScripts/AdminUser/Permission.js"></script>
