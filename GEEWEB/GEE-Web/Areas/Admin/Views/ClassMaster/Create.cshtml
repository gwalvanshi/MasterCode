
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid border">
    <div class="row">
        <div id="toastmsg"><p class="yellow">Fill all mandatory feilds (*)..</p></div>

        <div class="col-md-12 border-left p-3 bg-light">
            <h5 class=" pb-2 text-center text-uppercase font-weight-bold">@Resource.GEE1110GRPhdrClassMaster</h5>
            <div class="mb-3">
                <div class="mb-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">@Resource.Enquiry1002lblLibrary</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Resource.Enquiry1002lblData</li>
                        </ol>
                    </nav>
                </div>

                <div class="row bg-white mx-auto py-2 mb-2">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <h4 class="master-table-title"><i class="fa fa-plus-circle" aria-hidden="true"> </i> Add Class Master data</h4>
                        <hr />
                        <label hidden="hidden" id="ClassMaster_ID"></label>
                        <input hidden="hidden" id="hdnCreatedDate"></input>

                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1110LBLClassClassification</label>
                            <select class="form-control form-control-sm" placeholder="@Resource.GEE1110LBLClassClassification" id="GEE1110mdClassClassification">
                                <option>@Resource.Enquiry1002lblSelect</option>
                            </select>
                        </div>

                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1110LBLName</label>
                            <input class="form-control form-control-sm" type="text" placeholder="@Resource.GEE1110LBLName" id="GEE1110mdName">
                        </div>


                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1110LBLCode</label>
                            <input class="form-control form-control-sm" type="text" placeholder="@Resource.GEE1110LBLCode" id="GEE1110mdCode">
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1110LBLSequence</label>
                            <input class="form-control form-control-sm" type="text" placeholder="@Resource.GEE1110LBLSequence" id="GEE1110mdSequence">
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1110LBLTotalSections</label>
                            <input class="form-control form-control-sm" type="text" placeholder="@Resource.GEE1110LBLTotalSections" id="GEE1110mdTotalSections">
                        </div>

                        <div class="form-group">
                            <div>
                                <button class="mybtndark" id="Add"><i class="far fa-plus-circle mr-2"></i>@Resource.GEE1110LBLbtnAdd</button>
                                <button class="mybtndark" id="Save"><i class="far fa-save mr-2"></i>@Resource.GEE1110LBLbtnSave</button>
                                <button class="mybtndark" id="Update" hidden="hidden"><i class="fas fa-check mr-2"></i></i>@Resource.GEE1505lblbtnUpdate</button>
                                <button class="mybtndark" id="Delete" hidden="hidden"><i class="fas fa-check mr-2"></i></i>@Resource.GEE1505lblbtnDelete</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <div class="row" style="visibility:hidden;">
                            <div class="col-lg-4 col-sm-12 col-xs-12">
                                <div class="form-group form-group-sm">
                                    <select class="form-control form-control-sm" placeholder="@Resource.GEE1505LBLAllType" id="GEE1505MDAllType">
                                        <option>@Resource.GEE1505LBLAllType</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-1 col-sm-1 col-xs-12">
                                <button class="btn btn-primary btn-sm" id="btnSearch"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                            </div>
                        </div>
                        <hr />

                        <div class="table-responsive">
                            <div id="divMasterTableDetails"></div>
                            <div class="table-responsive">
                                <table id="tblclassmasterdatadetails" class="table table-striped table-bordered table-sm table-hover" style="width:100%"></table>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var header1= "@Resource.Collegename";
</script>
<script src="~/Scripts/DevScripts/Common/Common.js"></script>
<script src="~/Scripts/DevScripts/AdminUser/ClassMaster.js"></script>
