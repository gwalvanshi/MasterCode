@using GEE_Web
@inherits System.Web.Mvc.WebViewPage
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid border">
    <div class="row">
        <div id="toastmsg"><p class="yellow">fill all mandatory feilds (*)..</p></div>

        <div class="col-md-12 border-left p-3 bg-light">
            <h5 class=" pb-2 text-center text-uppercase font-weight-bold">@Resource.GEE1510GRPhdr</h5>
            <div class="mb-3">
                <div class="mb-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">@Resource.Enquiry1002lblLibrary</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Resource.Enquiry1002lblData</li>
                        </ol>
                    </nav>
                </div>

                <div class="row bg-white mx-auto py-2 mb-2">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <h4 class="master-table-title"><i class="fa fa-plus-circle" aria-hidden="true"> </i> Add Document table data</h4>
                        <hr />
                        <label hidden="hidden" id="DocumentTypeID"></label>

                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1510LBLDocumentCategory</label>
                            <select class="form-control form-control-sm" placeholder="@Resource.GEE1510LBLDocumentCategory" id="GEE1510mdDocumentCategory">
                                <option>@Resource.Enquiry1002lblSelect</option>
                            </select>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1510LBLDocumentCode</label>
                            <input class="form-control form-control-sm" type="text" placeholder="@Resource.GEE1510LBLDocumentCode" id="GEE1510mdDocumentCode">
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1510LBLDocumentName</label>
                            <input class="form-control form-control-sm" type="text" placeholder="@Resource.GEE1510LBLDocumentName" id="GEE1510mdDocumentName">
                        </div>
                        <div class="row form-group form-group-sm">
                            <div class="col-md-4">
                                <label class="check1">@Resource.GEE1510LBLDigitalAllowed</label>
                                <input class="form-check-input ml-2 k-checkbox" type="checkbox" id="GEE1510mdDigitalAllowed" value="false">
                            </div>
                            <div class="col-md-4">
                                <label class="check1">@Resource.GEE1510LBLIsmadatory </label>
                                <input class="form-check-input ml-2 k-checkbox" type="checkbox" id="GEE1510mdIsMandetory" value="false">
                            </div>
                            <div class="col-md-4">
                                <label class="check1">@Resource.GEE1510LBLToFollow</label>
                                <input class="form-check-input ml-2 k-checkbox" type="checkbox" id="GEE1510mdToFollow" value="false">
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="control-label">@Resource.GEE1510LBLfollowType </label>
                            <select class="form-control form-control-sm" placeholder="@Resource.GEE1510LBLfollowType" id="GEE1510mdfollowType">
                                <option>@Resource.Enquiry1002lblSelect</option>
                            </select>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="control-label " for="remark">
                                @Resource.GEE1510LBLRemark
                            </label>
                            <textarea class="form-control form-control-sm" cols="20" id="GEE1510mdRemark" name="remark" rows="2"></textarea>
                        </div>
                        <div class="form-group">
                            <div>
                                <button class="mybtndark" id="Add"><i class="far fa-plus-circle mr-2"></i>@Resource.GEE1510LBLbtnAdd</button>
                                <button class="mybtndark" id="Save"><i class="far fa-save mr-2"></i>@Resource.GEE1510LBLbtnSave</button>
                                <button class="mybtndark" id="Update" hidden="hidden"><i class="fas fa-check mr-2"></i></i>@Resource.GEE1505lblbtnUpdate</button>
                                <button class="mybtndark" id="Delete" hidden="hidden"><i class="fas fa-check mr-2"></i></i>@Resource.GEE1505lblbtnDelete</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <div class="row">
                            <div class="col-lg-4 col-sm-12 col-xs-12">
                                <div class="form-group form-group-sm">
                                    <select class="form-control form-control-sm" placeholder="@Resource.GEE1510GRPhdr" id="DocumentTypeAll">
                                        <option>@Resource.GEE1510GRPhdr</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-1 col-sm-1 col-xs-12">
                                <button class="btn btn-primary btn-sm"><i class="fa fa-refresh" aria-hidden="true" id="btnSearch"></i></button>
                            </div>
                        </div>
                        <hr />

                        <div class="table-responsive">
                                <table id="tblDocumentTypedetails" class="table table-striped table-bordered table-sm table-hover" style="width:100%"></table>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/scripts/devscripts/Document/DocumentType.js"></script>
<script src="~/Scripts/DevScripts/Common/Common.js"></script>

